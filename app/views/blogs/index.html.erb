<h1>Blogs</h1>

<div class="col-xs-12 col-md-4">
  <%= form_with url: blogs_path, method: :get, class: "form-inline" do %>
    <div class="input-group mb-3">
      <%= search_field_tag :term, params[:term], class: "form-control", id: :term, placeholder: "Search Blogs" %>
      <%= button_tag class: "btn btn-outline-secondary" do %>
        <i class="bi bi-search form-control-feedback"></i>
      <% end %>
    </div>
  <% end %>
</div>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path %>
